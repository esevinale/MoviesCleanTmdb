<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/trailers_section"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:visibility="gone">

    <include layout="@layout/line_decorator" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/bottom_margin"
        android:layout_marginLeft="@dimen/details_block_margin"
        android:layout_marginRight="@dimen/details_block_margin"
        android:layout_marginTop="@dimen/details_block_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_trailers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/bottom_margin"
            android:text="@string/trailer"
            android:textAppearance="@style/TextAppearance.AppCompat.Title" />

        <HorizontalScrollView
            android:id="@+id/trailers_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/bottom_margin"
            android:layout_marginLeft="@dimen/details_block_margin"
            android:layout_marginRight="@dimen/details_block_margin">

            <LinearLayout
                android:id="@+id/ll_trailers"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" />

        </HorizontalScrollView>
    </LinearLayout>
</LinearLayout>